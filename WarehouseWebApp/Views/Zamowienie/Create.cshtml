@model WarehouseWebApp.Models.Zamowienie

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Zamowienie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataZamowienia" class="control-label"></label>
                <input asp-for="DataZamowienia" class="form-control" value=@DateTime.Now />
                <span asp-validation-for="DataZamowienia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataWystawieniaFaktury"  class="control-label"></label>
                <input asp-for="DataWystawieniaFaktury" disabled class="form-control" />
                <span asp-validation-for="DataWystawieniaFaktury" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsCompleted" disabled/> @Html.DisplayNameFor(model => model.IsCompleted)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsDone" disabled/> @Html.DisplayNameFor(model => model.IsDone)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

