@model WarehouseWebApp.Models.Lista

@{
    ViewData["Title"] = "CreateList";
}

<h2>CreateList</h2>

<h4>Lista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LiczbaSztuk" class="control-label"></label>
                <input asp-for="LiczbaSztuk" class="form-control" />
                <span asp-validation-for="LiczbaSztuk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZamowienieId" class="control-label"></label>
                <input asp-for="ZamowienieId" disabled class ="form-control" value="@ViewBag.idZamowienia"/>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-control" asp-items="@{new SelectList(ViewBag.ProductId, "Id", "Name")}"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SzczegolyZamowienia" asp-route-id="@ViewBag.idZamowienia">Przejdź do podsumowania zamówienia</a>
</div>

